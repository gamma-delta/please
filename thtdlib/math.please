(define (add1 x) (+ x 1))
(define ++ add1)
(define (sub1 x) (- x 1))
(define -- sub1)

(define (positive? x) (> x 0))
(define (negative? x) (< x 0))
(define (zero? x)     (= x 0))

(define (~ x)
  (if (callable? x)
    (negate x)
    (not x)))

(define (divisible-by x divisor)
  (=0 (% x divisor)))
